<html>
    <head>
        <title>The Butcher's Hair Salon</title>
        <link href="css/custom.css" rel='stylesheet' type="text/css">
        <link href="../../css/custom.css" rel='stylesheet' type="text/css">
        <link href='http://fonts.googleapis.com/css?family=PT+Sans' rel='stylesheet' type='text/css'>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
            <h2 style="font-weight:bold">Welcome to Butcher's!</h2>
            {% if stylists is not empty %}
                <h3 style="font_weight:600">Click on a stylist to view thier client list</h3>
                <ul>
                    {% for stylist in stylists %}
                    <li><a href="/stylist/{{ stylist.getId }}">{{ stylist.getName }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <h3>We have no stylists yet...come in and apply!</h3>

            {% endif %}
            <div class="row" style="margin-left: 5px">
                <form action='/stylist_added' method='post'>
                    <label for='name'>Stylist's name</label>
                    <input id='name' name='name' name='text'>

                    <button class="btn btn-default" style="padding-right:20px; padding-left:20px; background-color:#980D0D; color:black" type="submit">Add Stylist</button>
                </form>
            </div>
        </div>
    </body>
</html>
